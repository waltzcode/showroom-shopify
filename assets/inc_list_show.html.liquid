<div sr-video-container class="video-wapper bs-clearfix">
	<div class="sk-fading-circle">
	  <div class="sk-circle1 sk-circle"></div>
	  <div class="sk-circle2 sk-circle"></div>
	  <div class="sk-circle3 sk-circle"></div>
	  <div class="sk-circle4 sk-circle"></div>
	  <div class="sk-circle5 sk-circle"></div>
	  <div class="sk-circle6 sk-circle"></div>
	  <div class="sk-circle7 sk-circle"></div>
	  <div class="sk-circle8 sk-circle"></div>
	  <div class="sk-circle9 sk-circle"></div>
	  <div class="sk-circle10 sk-circle"></div>
	  <div class="sk-circle11 sk-circle"></div>
	  <div class="sk-circle12 sk-circle"></div>
	</div>
	<video preload="none" autobuffer>
		<source ng-src="{[{source.src}]}" type="{[{source.type}]}" ng-repeat="source in video.sources">
	</video>
	<img alt="{[{video.productTitle}]}" class="video-poster" sr-lazy-src="{[{video.poster}]}" ng-src="{{ 'default.jpg' | asset_url }}">
</div>
<div class="product-info bs-clearfix">
	<a ng-href="/#/show/{[{video.showId}]}">
		<span class="product-title" title="{[{video.productTitle}]}">{[{video.productName}]}</span>
	</a>
</div>
<div class="product-action bs-clearfix">
	<span class="socials">
		<a class="{[{video.isLiked ? 'liked' : ''}]}" ng-click="video.likeClick()">
			<span ng-bind="video.likeCounter"></span>
			<span class="fa fa-thumbs-up"></span>
		</a>
		<a ng-href="/#/show/{[{video.showId}]}">
			<span ng-bind="video.commentCounter"></span>
			<span class="fa fa-comments"></span>
		</a>
	</span>
	<a href="{[{video.productLinkUrl}]}" class="product-price" target="{[{video.productLinkTarget}]}">
		<span class="fa fa-usd"></span>
		<span>{[{video.price}]}</span>
	</a>
</div>
