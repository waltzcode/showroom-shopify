<div class="desktop-4 desktop-push-4 tablet-4 tablet-push-1 mobile-full login-container">
	<div id="logo" class="bs-clearfix">
		<a href="/#/">
			<img src="{{ 'logo.png' | asset_url }}" alt="Showroom Store" style="border: 0;"/>
			<span class="shop-name">Showroom</span>
		</a>
	</div>
	<div class="login-form">
		<h1>Sign In</h1>
		<form id="loginForm" name="loginForm" novalidate ng-submit="loginEmail()">
			<span class="error-messages" ng-bind="message"></span>
			<div>
				<input type="email" name="email" placeholder="Email" ng-model="email" required>
				<span class="error-messages" ng-show="loginForm.email.$invalid && showMessages">
					<span ng-show="loginForm.email.$error.required">Email is required</span>
					<span ng-show="loginForm.email.$error.email">Invalid email</span>
				</span>
			</div>
			<div>
				<input type="password" name="password" placeholder="Password" ng-model="password" required>
				<span class="error-messages" ng-show="loginForm.password.$invalid && showMessages">
					<span ng-show="loginForm.password.$error.required">Password is required</span>
				</span>
			</div>
			<div>
				<button type="submit" id="loginBtn">Sign in</button>
			</div>
		</form>
		<div class="helper-links">
			<a href="javascript:void(0)" class="forgot-password" ng-click="popupForgetPwd()">Forgot password?</a>
			<a href="/#/signup" class="signup">Join us Now!</a>
		</div>
	</div>
	<h2 class="connect-line"><span>Or</span></h2>
	<div class="social-buttons">
		<button id="facebookBtn" ng-click="connectFacebook()">
			<i class="fa fa-facebook-square fa-lg"></i>
			Connect with Facebook
		</button>
	</div>
</div>

<div style="display: none;">
	<div id="forgot-password" ng-controller="forgotPwdController">
		<h1>{[{headerText}]}</h1>
		<div class="reset_instruction">
			<div ng-bind-html="message"></div>
		</div>
		<form name="forgotPasswordForm" id="forgotPwdForm" novalidate ng-show="!resetSuccess" ng-submit="sendEmail()">
			<div>
				<label>ENTER YOUR EMAIL</label>
				<input type="email" name="email" required ng-model="email">
				<span class="error-messages" ng-show="forgotPasswordForm.email.$invalid && showForgotMessages">
					<span ng-show="forgotPasswordForm.email.$error.required">Email is required</span>
					<span ng-show="forgotPasswordForm.email.$error.email">Invalid email</span>
				</span>
			</div>
			<div>
				<input type="submit" value="Send">
			</div>
		</form>

	</div>
</div>
